@namespace GTRouteApp.DetailComponents

<div class="no-data-container">
    <div class="message-container">
        <p class="empty-icon" style="display: @IconDisplayCssValue;">
            <span class="bi bi-database-slash"></span>
        </p>
        @if (!string.IsNullOrWhiteSpace(OverrideText))
        {
            <p>@OverrideText</p>
        }
        else
        {
            <p>There is no @Text on this race track.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public string OverrideText { get; set; } = "";

    [Parameter]
    public string IconDisplayCssValue { get; set; } = "block";
}